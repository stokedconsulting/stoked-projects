{
  "name": "claude-projects-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "build": "turbo run build && npm run deploy:api",
    "compile": "turbo run compile",
    "watch": "turbo run watch",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:api": "cd packages/api && ./scripts/deploy-local.sh",
    "prepare": "husky",
    "typecheck": "turbo run compile"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "turbo": "^2.7.6",
    "typescript": "^5.3.3"
  }
}
