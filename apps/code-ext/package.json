{
    "name": "claude-projects-vscode",
    "displayName": "Claude Projects",
    "description": "Integrate GitHub Projects with VS Code. View and manage project boards, update item statuses, organize work by phases, and orchestrate Claude AI sessions with auto-continuation for seamless project execution.",
    "version": "0.0.1",
    "publisher": "stokedconsulting",
    "icon": "media/extension-icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/stokedconsulting/claude-projects-vscode"
    },
    "keywords": [
        "github",
        "projects",
        "project management",
        "claude",
        "ai",
        "automation",
        "kanban",
        "issues"
    ],
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "panel": [
                {
                    "id": "claude-projects-container",
                    "title": "Claude Projects",
                    "icon": "media/project-icon.svg"
                }
            ]
        },
        "views": {
            "claude-projects-container": [
                {
                    "type": "webview",
                    "id": "ghProjects.view",
                    "name": "Projects"
                }
            ]
        },
        "commands": [
            {
                "command": "ghProjects.refresh",
                "title": "Refresh Projects",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "ghProjects.viewActiveSessions",
                "title": "Claude Projects: View Active Claude Sessions"
            },
            {
                "command": "ghProjects.stopAllSessions",
                "title": "Claude Projects: Stop All Claude Sessions"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "ghProjects.refresh",
                    "when": "view == ghProjects.view",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Claude Projects",
            "properties": {
                "claudeProjects.useAPIService": {
                    "type": "boolean",
                    "default": true,
                    "description": "Use HTTP API service instead of direct GitHub GraphQL calls"
                },
                "claudeProjects.apiBaseUrl": {
                    "type": "string",
                    "default": "http://localhost:8167",
                    "description": "Base URL for the HTTP API service (only used when useAPIService is enabled)"
                },
                "ghProjects.notifications.websocketUrl": {
                    "type": "string",
                    "default": "ws://localhost:8080/notifications",
                    "description": "WebSocket URL for real-time notifications from the MCP notification server"
                },
                "ghProjects.notifications.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable real-time notifications via WebSocket"
                },
                "ghProjects.mcp.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for MCP server authentication (used for both HTTP API and WebSocket)"
                },
                "claudeProjects.agents.maxConcurrent": {
                    "type": "number",
                    "default": 1,
                    "minimum": 1,
                    "maximum": 10,
                    "description": "Maximum number of concurrent Claude agents (1-10)"
                },
                "claudeProjects.agents.dailyBudgetUSD": {
                    "type": "number",
                    "default": 50,
                    "minimum": 0,
                    "description": "Daily budget limit in USD for agent operations"
                },
                "claudeProjects.agents.monthlyBudgetUSD": {
                    "type": "number",
                    "default": 500,
                    "minimum": 0,
                    "description": "Monthly budget limit in USD for agent operations"
                },
                "claudeProjects.agents.enabledCategories": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Optimization",
                            "Innovation",
                            "Architecture",
                            "Front End Improvements",
                            "Back End Improvements",
                            "Security",
                            "Testing",
                            "Documentation",
                            "Technical Debt",
                            "Developer Experience (DX)",
                            "Monitoring & Observability",
                            "DevOps/Infrastructure",
                            "Accessibility (a11y)",
                            "Dependency Management",
                            "Data Management",
                            "Internationalization (i18n)",
                            "Error Handling & Resilience",
                            "Code Quality",
                            "Compliance & Governance",
                            "Scalability",
                            "API Evolution"
                        ]
                    },
                    "default": [
                        "Optimization",
                        "Innovation",
                        "Architecture",
                        "Front End Improvements",
                        "Back End Improvements",
                        "Security",
                        "Testing",
                        "Documentation",
                        "Technical Debt",
                        "Developer Experience (DX)",
                        "Monitoring & Observability",
                        "DevOps/Infrastructure",
                        "Accessibility (a11y)",
                        "Dependency Management",
                        "Data Management",
                        "Internationalization (i18n)",
                        "Error Handling & Resilience",
                        "Code Quality",
                        "Compliance & Governance",
                        "Scalability",
                        "API Evolution"
                    ],
                    "description": "Enabled agent categories for task assignment"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "build": "webpack",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "lint": "eslint src",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.9",
        "copy-webpack-plugin": "^13.0.1",
        "eslint": "^8.56.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@claude-projects/state-tracking-api": "workspace:*",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.18.1",
        "uuid": "^13.0.0",
        "ws": "^8.19.0"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.9",
        "utf-8-validate": "^6.0.5"
    }
}