{
  "server": {
    "name": "stoked-projects-mcp-server",
    "version": "0.1.0",
    "protocol": "mcp",
    "protocol_version": "2024-11-05"
  },
  "environments": {
    "development": {
      "api": {
        "baseUrl": "http://localhost:3000",
        "timeout": 10000,
        "retryAttempts": 3,
        "retryDelay": 1000
      },
      "logging": {
        "level": "debug",
        "format": "json"
      },
      "websocket": {
        "port": 8168,
        "host": "localhost"
      },
      "server": {
        "gracefulShutdownTimeout": 30000
      }
    },
    "staging": {
      "api": {
        "baseUrl": "https://staging-api.stoked-projects.example.com",
        "timeout": 15000,
        "retryAttempts": 5,
        "retryDelay": 2000
      },
      "logging": {
        "level": "info",
        "format": "json"
      },
      "websocket": {
        "port": 8168,
        "host": "0.0.0.0"
      },
      "server": {
        "gracefulShutdownTimeout": 60000
      }
    },
    "production": {
      "api": {
        "baseUrl": "https://api.stoked-projects.example.com",
        "timeout": 20000,
        "retryAttempts": 5,
        "retryDelay": 3000
      },
      "logging": {
        "level": "warn",
        "format": "json"
      },
      "websocket": {
        "port": 8168,
        "host": "0.0.0.0"
      },
      "server": {
        "gracefulShutdownTimeout": 90000
      }
    }
  },
  "authentication": {
    "methods": [
      {
        "type": "api_key",
        "header": "Authorization",
        "prefix": "Bearer",
        "envVar": "STATE_TRACKING_API_KEY"
      },
      {
        "type": "websocket_api_key",
        "header": "X-API-Key",
        "envVar": "WS_API_KEY"
      }
    ]
  },
  "tools": {
    "healthCheck": {
      "enabled": true,
      "timeout": 5000
    },
    "readProject": {
      "enabled": true,
      "caching": true,
      "cacheTtl": 300
    },
    "getIssueDetails": {
      "enabled": true,
      "caching": true,
      "cacheTtl": 300
    },
    "getProjectPhases": {
      "enabled": true,
      "caching": true,
      "cacheTtl": 600
    },
    "listIssues": {
      "enabled": true,
      "caching": true,
      "cacheTtl": 300
    },
    "updateIssue": {
      "enabled": true,
      "caching": false
    },
    "updateIssuePhase": {
      "enabled": true,
      "caching": false
    },
    "updateIssueStatus": {
      "enabled": true,
      "caching": false
    },
    "createIssue": {
      "enabled": true,
      "caching": false
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "interval": 30000,
      "timeout": 5000
    },
    "metrics": {
      "enabled": true,
      "port": 9090
    },
    "logging": {
      "structuredLogging": true,
      "requestTracking": true,
      "errorReporting": true
    }
  },
  "security": {
    "rateLimiting": {
      "enabled": true,
      "windowMs": 60000,
      "maxRequests": 1000
    },
    "cors": {
      "enabled": true,
      "origins": [
        "http://localhost:*",
        "https://*.stoked-projects.example.com"
      ]
    },
    "https": {
      "enforced": true,
      "certPath": "/etc/ssl/certs",
      "keyPath": "/etc/ssl/private"
    }
  }
}