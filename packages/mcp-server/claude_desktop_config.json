  "production_config": {
    "description": "Configuration for production deployment using Docker",
    "environment_variables": {
      "NODE_ENV": "production",
      "STATE_TRACKING_API_URL": "https://api.claude-projects.example.com",
      "STATE_TRACKING_API_KEY": "production-api-key",
      "WS_API_KEY": "production-ws-key",
      "GITHUB_TOKEN": "production-github-token",
      "LOG_LEVEL": "warn",
      "WS_HOST": "0.0.0.0",
      "WS_PORT": "8080"
    },
    "docker_config": {
      "image": "claude-projects-mcp-server:latest",
      "port": "8080",
      "healthCheck": {
        "test": "[\"CMD\", \"node\", \"scripts/health-check.js\"]",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "startPeriod": "40s"
      }
    }
  },
  "development_config": {
    "description": "Configuration for local development",
    "quick_start": [
      "1. From project root, navigate to MCP server:",
      "   cd packages/mcp-server",
      "",
      "2. Install dependencies:",
      "   pnpm install",
      "",
      "3. Create .env file:",
      "   cp .env.example .env",
      "   Edit .env with your values",
      "",
      "4. Build the server:",
      "   pnpm build",
      "",
      "5. Find the absolute path:",
      "   pwd",
      "",
      "6. Update Claude Desktop config with the path from step 5",
      "",
      "7. Restart Claude and test via MCP tab"
    ],
    "testing_tools": [
      "Try these tools in Claude to verify integration:",
      "- @health-check: Tests API connectivity",
      "- @read-project: Reads project details",
      "- @list-issues: Lists project issues",
      "- @get-issue-details: Gets issue details",
      "- @update-issue-status: Updates issue status",
      "- @create-issue: Creates new issue"
    ]
  }
}
